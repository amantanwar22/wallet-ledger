{
  "name": "wallet-ledger",
  "version": "1.0.0",
  "description": "Production-ready internal wallet ledger service with double-entry bookkeeping",
  "type": "module",
  "main": "src/server.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "migrate": "node src/db/migrate.js",
    "seed": "node src/db/seed.js",
    "migrate:seed": "npm run migrate && npm run seed",
    "test": "node --experimental-vm-modules node_modules/.bin/jest --runInBand --forceExit",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --runInBand --forceExit --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.0.1",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "pg": "^8.13.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "transform": {},
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testTimeout": 30000
  }
}
